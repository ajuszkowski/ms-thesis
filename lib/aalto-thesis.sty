\hline
\textbf{\ATSUPERVISORNAME:} &
\multicolumn{3}{l|}{\allowlinebreaks{11cm}{\ATSUPERVISOR}}\\
%\textbf{\ATINSTRUCTORNAME:} & 
%\multicolumn{3}{l|}{\allowlinebreaks{11cm}{\ATINSTRUCTOR}}\\
\hline
\multicolumn{4}{|l|}{\allowlinebreaks{14.5cm}{%
